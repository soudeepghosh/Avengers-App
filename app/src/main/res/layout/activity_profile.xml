<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Edward Stark"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:textStyle="bold"
        android:textColor="#050000"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tonystark@avanger.com"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtName"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 9111123321"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtMail"
        android:layout_marginTop="15dp"
        android:textColor="#000001"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:background="#00b8d4"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@id/imgTonyStark"
        android:layout_margin="20dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit the App"
        android:textColor="#ffffff"
        android:background="#ff3d00"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>