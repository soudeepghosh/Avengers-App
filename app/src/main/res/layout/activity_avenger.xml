            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tony Edward Stark"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:textStyle="bold"
            android:textColor="#050000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtMailTony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tonystark@avenger.com"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtNameTony"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/txtPhoneTony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1 9111123321"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtMailTony"
            android:layout_marginTop="15dp"
            android:textColor="#000001"/>
